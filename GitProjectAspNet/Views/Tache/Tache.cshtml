@model IEnumerable<GitProjectAspNet.Models.Tache>

@{
    ViewBag.Title = "Tache";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tache</h2>

<p>
    <!-- @Html.ActionLink("Ajouter tache", "Login")-->
    <button type="button" class="btn btn-Secondary" data-toggle="modal" data-target="#exampleModal">
        Ajouter tache
    </button>
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdTache)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TacheNomUtilisateur)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTache)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TacheNomUtilisateur)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdTache }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdTache }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdTache })
            </td>
        </tr>

    }
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="exampleModalLabel"><b>NOUVELLE TACHE</b></h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Tache", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="tachedescription" class="form-label">Todo</label>
                        <input type="text" class="form-control" name="tachedescription">
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="state">
                        <label class="form-check-label" for="flexSwitchCheckDefault">check out</label>
                    </div>

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Valider" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

  